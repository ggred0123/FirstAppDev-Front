<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 기존 스타일들 -->

    <!-- 커스텀 AlertDialog 스타일 -->
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- 다이얼로그 배경색 설정 -->
        <item name="colorAccent">#E6E6FA</item> <!-- 연한 보라색 -->
        <!-- 제목 텍스트 스타일 설정 -->
        <item name="android:textColorPrimary">#4A148C</item> <!-- 진한 보라색 -->
        <!-- 메시지 텍스트 스타일 설정 -->
        <item name="android:textColorSecondary">#4A148C</item> <!-- 진한 보라색 -->
        <item name="android:windowMinWidthMajor">75%</item>
        <item name="android:windowMinWidthMinor">75%</item>
    </style>

    <style name="DarkDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">#000000</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:buttonBarButtonStyle">@style/DarkDialogButtonStyle</item>
    </style>

    <style name="DarkDialogButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#9F3FFF</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- 배경색 설정 -->
        <item name="windowSplashScreenBackground">@color/black</item>

        <!-- 스플래시 화면에 표시할 아이콘 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/logo</item>




        <!-- 스플래시 화면이 표시되는 시간 -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- 스플래시 화면 이후 전환될 테마 -->
        <item name="postSplashScreenTheme">@style/Theme.MyDev</item>



    </style>


</resources>
