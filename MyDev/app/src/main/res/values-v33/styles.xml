<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- 배경색 설정 -->
        <item name="windowSplashScreenBackground">@color/white</item>

        <!-- 스플래시 화면에 표시할 아이콘 -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ipad_mini_8_3___1</item>

        <!-- 스플래시 화면에 표시할 아이콘의 크기 -->


        <!-- 스플래시 화면이 표시되는 시간 -->
        <item name="windowSplashScreenAnimationDuration">200</item>

        <!-- 스플래시 화면 이후 전환될 테마 -->
        <item name="postSplashScreenTheme">@style/Theme.MyDev</item>


        <item name="android:windowSplashScreenIconBackgroundColor">
            @android:color/transparent
        </item>
        <item name="android:windowSplashScreenBehavior">icon_preferred</item>
    </style>
</resources>